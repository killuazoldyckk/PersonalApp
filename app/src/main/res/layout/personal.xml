<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_500"
    tools:context=".Personal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
         >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:outlineSpotShadowColor="@color/grey_500"
            android:outlineAmbientShadowColor="@color/grey_500"
            android:backgroundTint="@color/grey_500"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/grey_700"
            android:drawableLeft="@drawable/ic_action_name"
            android:layout_alignParentStart="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="Vio Aprivia"
            android:layout_centerInParent="true"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/grey_700"
            android:text="Next"
            android:outlineSpotShadowColor="@color/grey_500"
            android:outlineAmbientShadowColor="@color/grey_500"
            android:backgroundTint="@color/grey_500"
            android:drawableRight="@drawable/next_icon"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Front-End Web Developer"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medan, Indonesia"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/call_icon"
            android:drawablePadding="0dp"
            android:outlineSpotShadowColor="@color/grey_500"
            android:outlineAmbientShadowColor="@color/grey_500"
            android:backgroundTint="@color/grey_500"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/message_icon"
            android:outlineSpotShadowColor="@color/grey_500"
            android:outlineAmbientShadowColor="@color/grey_500"
            android:backgroundTint="@color/grey_500"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/email_icon"
            android:outlineSpotShadowColor="@color/grey_500"
            android:outlineAmbientShadowColor="@color/grey_500"
            android:backgroundTint="@color/grey_500"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#dc442e"
            android:text="About Me"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat" />

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"/>


    </LinearLayout>

</LinearLayout>